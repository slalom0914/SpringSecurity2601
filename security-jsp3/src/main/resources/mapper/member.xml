<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.memberMapper">
    <resultMap type="java.util.Map" id="memberMap"></resultMap>
    <insert id="memberInsert" parameterType="map">
        insert into member202601(id,username,password
                                ,email,role,createDate)
        values(seq_member202601_no.nextval,#{username},#{password},#{email},#{role},to_char(sysdate,'YYYY-MM-DD'))
    </insert>
    <select id="login" parameterType="string" resultType="com.example.demo.model.User">
        SELECT id, username, password, role, email, createDate
        FROM member202601
        WHERE username = #{value}
    </select>
</mapper>